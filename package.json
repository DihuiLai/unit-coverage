{
  "name": "separated-coverage",
  "version": "1.3.0",
  "description": "",
  "main": "index.js",
  "author": "Marat Dulin",
  "license": "MIT",
  "bin": {
    "separated-coverage": "bin/separated-coverage.js"
  },
  "dependencies": {
    "chalk": "^0.5.1",
    "enb-source-map": "^1.3.1",
    "escodegen": "^1.3.3",
    "escope": "^1.0.1",
    "esprima": "^1.2.2",
    "estraverse": "^1.5.1",
    "html-entities": "^1.0.10",
    "jade": "^1.5.0",
    "minimatch": "^0.4.0"
  },
  "devDependencies": {
    "chai": "^1.9.1",
    "jscs": "^1.5.9",
    "mocha": "^1.21.4",
    "strip-ansi": "^2.0.0"
  },
  "scripts": {
    "test": "npm run lint && npm run unit",
    "unit": "jscs -p yandex lib test hooks bin",
    "lint": "mocha -R spec --recursive lib test",
    "cov-build": "bin/separated-coverage.js run-mocha --sources 'lib/**,reporters/**' --tests 'test/**' -- --recursive lib test",
    "cov-rep-html": "bin/separated-coverage.js report --reporter html > coverage.html",
    "cov-rep-tree": "bin/separated-coverage.js report --reporter tree",
    "coverage": "npm run cov-build && npm run cov-rep-tree",
    "coverage-html": "npm run cov-build && npm run cov-rep-html"
  }
}
